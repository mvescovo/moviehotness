<android.support.v7.widget.CardView
    style="@style/CardView.Dark"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/standard_padding"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_margin="@dimen/standard_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/review_title"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/review_title"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/standard_padding">

            <TextView
                android:id="@+id/review_author_label"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/review_author_label"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/review_author"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standard_padding"
                android:visibility="invisible"/>

        </LinearLayout>

        <TextView
            android:id="@+id/review_content"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:layout_marginTop="@dimen/standard_padding"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/review_content_read_more"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_detail_read_more"
            android:visibility="invisible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/review_all_reviews_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/review_all_reviews_button"
                android:visibility="invisible"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
