<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.michaelvescovo.moviehotness.view_movies.view.AboutFragment">

    <TextView
        android:id="@+id/activity_about_attribution"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_about_attribution"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/activity_about_themoviedb_logo"
        android:src="@drawable/var_8_0_tmdb_logo"/>

</LinearLayout>
