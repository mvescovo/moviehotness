<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.michaelvescovo.moviehotness"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission-sdk-23 android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_theaters_24dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:authorities="com.michaelvescovo.moviehotness"
            android:name=".data.MovieHotnessProvider"
            android:enabled="true"
            android:exported="false"/>

        <activity android:name=".view_movies.ViewMoviesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".view_movie_details.ViewMovieDetailsActivity"
            android:label=""
            android:parentActivityName=".view_movies.ViewMoviesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view_movies.ViewMoviesActivity"/>
        </activity>

        <activity android:name=".view_full_plot.ViewFullPlotActivity">
        </activity>

        <activity android:name=".view_attribution.AttributionActivity">
        </activity>

        <activity android:name=".view_all_trailers.ViewAllTrailersActivity">
        </activity>

        <activity android:name=".view_all_reviews.ViewAllReviewsActivity">
        </activity>

        <activity android:name=".view_full_review.ViewFullReviewActivity">
        </activity>

    </application>

</manifest>
